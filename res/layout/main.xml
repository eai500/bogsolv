<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/wood"
        >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/orange"
                    android:padding="8dp"
                    android:id="@+id/cubes"
    >
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/black"
                            android:padding="5dp"
                    >
            <EditText
                    android:inputType="text"
                    android:id="@+id/a1"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/a2"
                    android:layout_toRightOf="@+id/a1"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/a3"
                    android:layout_toRightOf="@+id/a2"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/a4"
                    android:layout_toRightOf="@+id/a3"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/b1"
                    android:layout_below="@+id/a1"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/b2"
                    android:layout_below="@+id/a2"
                    android:layout_toRightOf="@+id/b1"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/b3"
                    android:layout_below="@id/a3"
                    android:layout_toRightOf="@+id/b2"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/b4"
                    android:layout_below="@+id/a4"
                    android:layout_toRightOf="@+id/b3"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/c1"
                    android:layout_below="@+id/b1"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/c2"
                    android:layout_below="@+id/b2"
                    android:layout_toRightOf="@+id/c1"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/c3"
                    android:layout_below="@+id/b3"
                    android:layout_toRightOf="@+id/c2"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/c4"
                    android:layout_below="@+id/b4"
                    android:layout_toRightOf="@+id/c3"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/d1"
                    android:layout_below="@+id/c1"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/d2"
                    android:layout_below="@+id/c2"
                    android:layout_toRightOf="@+id/d1"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/d3"
                    android:layout_below="@+id/c3"
                    android:layout_toRightOf="@+id/d2"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            <EditText
                    android:inputType="text"
                    android:id="@+id/d4"
                    android:layout_below="@+id/c4"
                    android:layout_toRightOf="@+id/d3"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textSize="30dp"
                    android:gravity="center"
                    />

                </RelativeLayout>

            </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp"
                    android:id="@+id/buttons"
                    android:layout_below="@+id/cubes"
            >
        <Button
                android:id="@+id/clearButton"
                android:layout_height="60dp"
                android:layout_width="140dp"
                android:textSize="20dp"
                android:text="@string/clear"

                />
        <Button
                android:id="@+id/solveButton"
                android:layout_height="60dp"
                android:layout_width="140dp"
                android:layout_toRightOf="@+id/clearButton"
                android:textSize="20dp"
                android:text="@string/solve"
                />
    </RelativeLayout>

</RelativeLayout>

